// Une macro-squelette pour determiner la direction et la fréquence d'un cosinus.
// Version: 0.1
// Date: 14/07/2006
// Author: L. Macaire
 
macro "direction FFT" {

// Ouverture d'une image si nécessaire - sinon la macro analyse l'image courante
// open ("C:\\lagis-pc-serv2\\enseignement\\enseigne.0910\\master ivi\\seance 1 cours ludo fft\\omega_zero_sept_x.jpg");
// récupération du ID de l'image
image = getImageID();

// application de la FFT
run("FFT", "title='FFT de l'image courante'");

// récupération de ID de la FFT : du plan de fourier
fourier = getImageID();

// récupération de la taille W x H du plan de fourier
W = getWidth();
H = getHeight();

// recherche du max (normalement localisé au centre du plan de fourier

max_1 = 0; 
max_2 = 0; 
i_max_1 = 0;
j_max_1 = 0;
i_max_2 = 0;
j_max_2 = 0;

for (j=0; j<H; j++) {
   for (i=0; i<W; i++) 
	{
	p = getPixel(i,j);
	if ( max_1 < p)
		{
		max_2=max_1;// détection d'un nouveau max l'ancien devient le max_2
		i_max_2 = i_max_1;
		j_max_2 = j_max_1;		
		max_1 =p;
		i_max_1 = i;
		j_max_1 =j;
		} else 
		if ( max_2 < p)//si max_2 et après max_1 normalement impossible parce que symétique au milieu
			{
			max_2=p;
			i_max_2 = i;
			j_max_2 = j;		
			} 
		
      	}
   }

// mise à zero des valeurs max
setPixel (i_max_1,j_max_1,0);
setPixel (i_max_2,j_max_2,0);
print("max 1 =",max_1," x :",i_max_1," y :",j_max_1," milieu");
print("max 2 =",max_2," x :",i_max_2," y :",j_max_2," ");
print("position (centre milieu) ->  x:",(i_max_2-i_max_1),"  y:",(j_max_1-j_max_2));


//dist -> distance entre le milieu et le 2nd point
if(((i_max_1)-i_max_2)==0){//horizontale
	dist=((j_max_1)-j_max_2);
	text="Horizontale";
}else if (((j_max_1)-j_max_2)==0){//verticale
	dist=((i_max_1)-i_max_2);
	text="verticale";
}else {//digonale
	dist=sqrt( (((i_max_1)-i_max_2)*((i_max_1)-i_max_2))   +   (((j_max_1)-j_max_2)*((j_max_1)-j_max_2))  );
	text="diagonale";
}
f=dist/H; // calcule la fréquence

print("fréquence -> ",f,"\nde direction :",text,"\ndistance :",dist);

} 
